<!DOCTYPE html>
<html>
<head>
  <title>Admin Page</title>
  <style>
    /* Define styles for the side navigation bar */
    .sidenav {
      height: 100%;
      width: 250px;
      position: fixed;
      z-index: 1;
      top: 0;
      left: 0;
      background-color: #f1f1f1;
      overflow-x: hidden;
      transition: 0.5s;
      padding-top: 60px;
      /* Additional styles for the top navigation integration */
      position: absolute;
    }
    .sidenav a {
  display: block;
  padding: 10px;
  margin-bottom: 5px;
  margin-left: 30px;
  color: black;
  text-decoration: none;
}
    /* Adjust the position of the sidebar */
    .sidenav {
      position: fixed;
    }
    
    /* Define styles for the content area */
    .content {
      margin-left: 250px; /* Adjust the margin to match the sidebar width */
      padding: 20px;
      transition: 0.5s;
      margin-top: 100px; /* Add margin to accommodate the top navigation */
    }
    
    /* Define styles for the profile icon */
    .profile-icon {
      position: fixed;
      top: 10px;
      right: 40px;
      width: 40px;
      height: 40px;
      background-color: #08089b;
      border-radius: 40%;
      cursor: pointer;
      z-index: 2;
    }
    
    /* Define styles for the profile icon's inner dot */
    .profile-icon::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 6px;
      height: 6px;
      background-color: white;
      border-radius: 50%;
    }
    
    /* Adjust the hamburger menu's position */
    .hamburger {
      display: block;
      position: fixed;
      top: 20px;
      left: 20px;
      cursor: pointer;
      z-index: 2;
    }
    
    /* Add margin to the content area when the sidebar is closed */
    .hamburger.active + #content {
      margin-left: 70px;
    }
    
    /* Define styles for the top navigation bar */
    .topnav {
      background-color: #333;
      overflow: hidden;
      position: fixed;
      top: 0;
      left: 250px;
      width: 100%;
    }
    
    /* Define styles for the navigation links within the top navigation bar */
    .topnav a {
      float: left;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-size: 17px;
    }
    
    /* Change the color of the active/current navigation link */
    .topnav a.active {
      background-color: #4CAF50;
      color: white;
    }
    
    /* Change the appearance of navigation links on hover */
    .topnav a:hover {
      background-color: #3eeb13;
      color: white;
    }
    
    /* Add a "clearfix" to clear floats after the top navigation */
    .topnav::after {
      content: "";
      clear: both;
      display: table;
    }
  </style>
  <script>
    // Toggle the sidebar
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const content = document.getElementById('content');
      const hamburger = document.getElementById('hamburger');
      
      sidebar.classList.toggle('active');
      content.classList.toggle('active');
      hamburger.classList.toggle('active');
    }
  </script>
</head>
<body>
    <!-- Top Navigation Bar -->
    <div class="topnav">
        <a href="#" class="active">Home</a>
        
      </div>
      <div class="profile-icon">
        <a href="/profile">Profile</a>
      </div>
  <!-- Hamburger Menu -->
  <div class="hamburger" id="hamburger" onclick="toggleSidebar()">
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
  </div>
  
  <!-- Side Navigation Bar -->
  <div class="sidenav" id="sidebar">
    <a href="/dashboard">Dashboard</a>
    <br>
    <a href="/flying">Add Details</a>
  </div>
  
</body>
</html>
